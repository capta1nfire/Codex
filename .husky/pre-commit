    echo "âŒ Guardian tests failed! page.tsx protection violated."
    echo "ğŸ“– Please read: docs/policies/MAIN_PAGE_PROTECTION_POLICY.md"
    exit 1
  fi
  
  echo "âœ… Guardian tests passed"
fi